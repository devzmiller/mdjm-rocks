<!DOCTYPE html>
<html>
  <head>
    <title>Rutherford Rocket Labs</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="top-bar">
      <img id='logo' src="/logo2.png" height="70">
      <h1 id="company-name">Rutherford Rocket Labs</h1>
      <% if session[:user_id] %>
        <%= form_tag session_path(session[:user_id]), method: :delete do %>
          <%= submit_tag 'Logout', id: 'logout' %>
        <% end %>
      <% end %>
    </div>

    <% if session[:user_id] %>
      <%= yield %>
    <% else %>
      <%= render 'sessions/new' %>
    <% end %>
  </body>
</html>
