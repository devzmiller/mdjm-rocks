<!DOCTYPE html>
<html>
  <head>
    <title>MjdmRocks</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="top-bar">
      <%= link_to image_tag("logo2.png", alt: "Rutherford Rockets Logo", id: 'logo'), parts_path %>
      <h1 id="company-name"><%= link_to "Rutherford Rocket Labs", parts_path %></h1>
      <% if session[:user_id] %>
        <%= form_tag session_path(session[:user_id]), method: :delete do %>
          <%= submit_tag 'Logout', id: 'logout' %>
        <% end %>
      <% end %>
    </div>

    <% if session[:user_id] %>
      <%= yield %>
    <% else %>
      <%= render 'sessions/new' %>
    <% end %>
  </body>
</html>
