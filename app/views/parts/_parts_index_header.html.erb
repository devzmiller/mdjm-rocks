<h2 class="inventory-header">Inventory</h2>

<div class="flex-container">

  <% if !@warehouse %>

    <div class="left">

      <div id="warehouse-search">
        <%= form_tag parts_path, method: :get do %>
        <%= label_tag 'Warehouse Name:' %>&nbsp
        <%= text_field_tag 'name', nil, placeholder: 'ex. Austin' %>
        <%= submit_tag 'Find' %>
        <% end %>

        <div id='search-errors' class='errors'>
          <%= render 'shared/errors' %>
        </div>

      </div>
    </div>

    <div class="right">
      <% if User.find(session[:user_id]).role == "manager" %>
      <%= link_to "Add Warehouse", new_warehouse_path, class: "last nav-button" %>
      <%= link_to "Add New Employee", new_user_path, class: "nav-button" %>
      <% end %>
      <%= link_to "See All Orders", orders_path, class: "nav-button" %>
    </div>

  <% else %>
    <div class="left">
      <h3 class="warehouse-name"> <%= @warehouse.name %> </h3>
    </div>

    <div class="right">
      <% if User.find(session[:user_id]).role == "manager" %>
      <%= link_to "Add Warehouse", new_warehouse_path, class: "last nav-button" %>
      <%= link_to "Add New Employee", new_user_path, class: "nav-button" %>
      <% end %>
      <%= link_to "See All Orders", orders_path, class: "nav-button" %>
    </div>
  <% end %>
</div>
